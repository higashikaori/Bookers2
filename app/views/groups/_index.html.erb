<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td>
          <% if group.group_image.attached? %>
            <%= image_tag group.group_image, size: "50x50" %>
          <% else %>
            <%= image_tag 'default-image', size: "50x50" %>
          <% end %>
        </td>
        <td><%= link_to group.name, group_path(group) %></td>
        <td><%= group.introduction %></td>
        <td><%= group.group_users.count+1 %></td>
        <% if group.is_ownerd_by?(current_user) %>
          <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>