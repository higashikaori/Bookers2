<%= render 'book', book: @book, books: @book %>

<!--Booksの投稿一覧-->
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th colspan="2">Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>

    <% @books.each do |book| %>
      <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>