<!--バリデーション-->
<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<!--テンプレート-->
<%= render 'book', new_book: @new_book, user: current_user %>



<!--Booksの投稿一覧-->
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th colspan="2">Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>

    <% @books.each do |book| %>
      <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>