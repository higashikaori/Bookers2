<div class="col-md-3">

<!--ユーザー情報-->

  <div class="col">
  <h2>User info</h2>

  <% if user %>
    <%= image_tag user.get_profile_image(100,100) %>
  <% else %>
    <%= image_tag current_user.get_profile_image(100,100) %>
  <% end %>

    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th>
            <% if user %>
              <%= user.name %>
            <% else %>
              <%= current_user.name %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>introduction</th>
          <th>
            <% if user %>
              <%= user.introduction %>
            <% else %>
              <%= current_user.introduction %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to user.followings.count, user_followings_path(user) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to user.followers.count, user_followers_path(user) %></th>
        </tr>
      </tbody>
    </table>

  </div>

  <% if current_user != user %>
    <%= render 'relationships/btn', user: user, options: { class: ""} %>
    <!--current_user != user &&は後で消す-->
    <% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
      <%= link_to 'chatを始める', chat_path(user.id), class: "m-2" %>
    <% end %>
  <% else %>
    <% unless user.guest_user? %>
    <%= link_to edit_user_path(user.id) do %>
      <button type="button" class="btn btn-outline-secondary btn-block">
        <i class="fa-solid fa-user-gear"></i>
      </button>
    <% end %>
    <% end %>
  <% end %>


<!--投稿フォーム-->
  <div class="col">
    <h2 class="mt-4">New book</h2>
    <%= form_with model: new_book, url:'/books', method: :post do |f| %>
      <div>
        <label for="book_title" class="form-label">Title</label>
        <%= f.text_field :title, id: "book_title", class: 'form-control' %><br>
        <label for="book_opinion" class="form-label">Opinion</label><br>
        <%= f.text_area :body, id: "book_opinion", class: 'form-control' %><br>
      </div>
      <%= f.submit 'Create Book', class: 'btn btn btn-success mb-3' %>
    <% end %>
  </div>

</div>