<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-5 mx-auto">
      <h2>User info</h2>

 <!--バリデーション-->
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

<!--ユーザー詳細-->
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name" class="form-label">Name</label>
        <%= f.text_field :name, autofocus: true, id: "user_name", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="user_name" class="form-label">Image</label><br>
        <%= file_field :image, accept: "image/*", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="user_introduction" class="form-label">Introduction</label>
        <%= f.text_area :introduction, id: "user_introduction", class: 'form-control' %>
        <%= f.submit 'Update User', class: 'btn btn btn-secondary my-3' %>
      </div>
      <% end %>

    </div>
  </div>
</div>