<!--バリデーション-->
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--ユーザー詳細-->
<h2>User info</h2>

<%= form_with model: @user do |f| %>
  <label for="user_name">Name</label><br>
  <%= f.text_field :name, autofocus: true, id: "user_name" %><br>
  <label for="user_introduction">Introduction</label><br>
  <%= f.text_area :introduction, id: "user_introduction" %><br>
  <%= f.submit 'Update User' %>
<% end %>