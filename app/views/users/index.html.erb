<div class="container px-5 px-sm-0">
  <div class="row">

<!--テンプレート-->
    <%= render 'books/book', new_book: @new_book, user: current_user %>


<!--usersの一覧-->
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <% @user.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          <% end %>
        </thead>
      </table>
    </div>

  </div>
</div>